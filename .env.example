# Flask secret key
SDCP_SECRET_KEY=replace-with-a-secure-random-string

# SMTP settings for email notifications
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
EMAIL_FROM="Sergio Diaz Custom Painting <no-reply@sergiodiazpainting.com>"
ADMIN_EMAIL=owner@example.com

# Redis for RQ (optional but recommended)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (optional)
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Limits
MAX_CONTENT_LENGTH=16777216
MAX_VIDEO_DURATION=120
MAX_VIDEO_BITRATE_KBPS=2000

# App base url (for emails)
BASE_URL=http://localhost:5000